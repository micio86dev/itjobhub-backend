# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# Database
DATABASE_URL=mongodb://localhost:27017/itjobhub
MONGODB_URI=mongodb://localhost:27017/itjobhub

# JWT
JWT_SECRET=your-secure-jwt-secret-here
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-secure-refresh-token-secret-here
REFRESH_TOKEN_EXPIRES_IN=7d

# Admin Credentials
ADMIN_EMAIL=admin@itjobhub.com
ADMIN_PASSWORD=AdminPassword123!

# Mailgun (optional)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.mailgun.org
MAILGUN_FROM_EMAIL=noreply@your-domain.mailgun.org

# CORS / URLs
BASE_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000

# Feature Flags
FEATURE_USER_REGISTRATION=true
FEATURE_JOB_POSTING=true
